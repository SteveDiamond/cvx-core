{
  "format": "cvx",
  "version": "1.0",
  "name": "simple_quadratic_program",

  "variables": {
    "x": { "shape": [2] }
  },

  "parameters": {
    "P": { "value": [[2, 0], [0, 2]], "psd": true },
    "q": { "value": [-2, -5] }
  },

  "objective": {
    "sense": "minimize",
    "expression": "0.5 * quad_form(x, P) + q @ x"
  },

  "constraints": [
    "x[0] + x[1] <= 1",
    "x >= 0"
  ],

  "metadata": {
    "description": "Simple convex quadratic program",
    "problem_class": "QP",
    "expected_optimal": -2.5,
    "expected_solution": [0.5, 0.5]
  }
}
