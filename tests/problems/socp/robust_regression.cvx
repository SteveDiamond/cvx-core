{
  "format": "cvx",
  "version": "1.0",
  "name": "huber_regression",

  "variables": {
    "x": { "shape": [10] },
    "u": { "shape": [50], "nonneg": true },
    "v": { "shape": [50], "nonneg": true }
  },

  "parameters": {
    "A": { "shape": [50, 10], "data": "A.npy" },
    "b": { "shape": [50], "data": "b.npy" },
    "M": { "value": 1.0 }
  },

  "objective": {
    "sense": "minimize",
    "expression": "sum(u + M * v)"
  },

  "constraints": [
    "A @ x - b <= u + v",
    "-(A @ x - b) <= u + v",
    "u <= M"
  ],

  "metadata": {
    "description": "Huber regression (robust to outliers)",
    "problem_class": "LP",
    "notes": "Approximates L1 loss for large residuals, L2 for small"
  }
}
